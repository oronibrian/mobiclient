<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/shape"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ReceiptActivity">


    <Button
        android:id="@+id/btnnew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/btn"
        android:text="New ticket" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="353dp"
        android:layout_height="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:text="Content"
        android:textSize="18sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/check"
        android:layout_width="53dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@null"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/animated_vector_check" />

    <ImageView
        android:id="@+id/cross"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_alignTop="@id/check"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/check"
        android:contentDescription="@null"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/animated_vector_cross" />


    <Button
        android:id="@+id/btncomplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/btn"
        android:text="Proceed To Book" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/txt_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="128dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>