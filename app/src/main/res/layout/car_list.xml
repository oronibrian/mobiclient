<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/my_shape_available_cars"
    android:padding="16dp">

    <ImageView
        android:id="@+id/postThumb"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />


    <LinearLayout
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/postThumb"
        android:orientation="vertical">


        <TextView
            android:id="@+id/seat_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/postThumb"
            android:layout_margin="16dp"
            android:layout_toRightOf="@id/postThumb"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Car title"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/available_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/from"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="TextView" />


        <TextView
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/available_seats"
            android:text="Seats: " />

        <TextView
            android:id="@+id/departure_time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/postThumb"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/postThumb"
            android:maxLines="1"
            android:text="Date and Departure"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/departure_time_txt"
            android:layout_alignLeft="@+id/departure_time_txt"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:text="1212"
            android:textSize="12sp" />

    </LinearLayout>




</RelativeLayout>