<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_list_view_tutorial_with_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_shape_available_cars"
    android:orientation="horizontal"
    android:padding="7dp">

    <ImageView
        android:id="@+id/postThumb"
        android:layout_width="99dp"
        android:layout_height="94dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:src="@drawable/image" />

    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="98dp"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView
            android:id="@+id/seat_number"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/available_seats"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/departure_time_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:text="Date and Departure"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/departure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="1212"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>