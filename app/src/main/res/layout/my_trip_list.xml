<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_shape_available_cars"
    android:orientation="horizontal"
    android:padding="7dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_middle"
        android:clickable="true"
        android:visibility="visible"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:orientation="vertical">



        <TextView
            android:id="@+id/passengername"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phonenum"
            android:textAlignment="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/routeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:text="Car title"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routeTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Date and Departure"
            android:textAlignment="center"

            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/travel_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/departure_time_txt"
            android:layout_alignLeft="@+id/departure_time_txt"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routeTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:text="Reference Num"
            android:textAlignment="center"

            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seatsbooked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/manifestavilableseats"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/routeTextView"
            android:layout_alignParentTop="true"
            android:text="Amount"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/too"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="too"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/manifestavilableseats"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:text="from: "
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/issuedon"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

    </LinearLayout>