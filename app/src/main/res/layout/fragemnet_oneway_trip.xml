<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/table_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#ffff">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_from_one"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"

                android:layout_toStartOf="@+id/spinner_to_one"
                android:layout_toLeftOf="@+id/spinner_to_one"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAlignment="center"
                app:ms_alignLabels="true"
                app:ms_arrowColor="@color/base"
                app:ms_arrowSize="8dp"
                app:ms_baseColor="@color/base"
                app:ms_dropDownHintView="@layout/dropdown_hint_item"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="@color/error"
                app:ms_floatingLabelColor="@color/floating_label"
                app:ms_floatingLabelText="floating label"
                app:ms_highlightColor="@color/highlight"
                app:ms_hint="From.."
                app:ms_hintColor="@color/highlight"
                app:ms_hintView="@layout/hint_item"
                app:ms_multiline="false"
                app:ms_thickness="2dp" />


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_to_one"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="15dp"
                app:ms_alignLabels="true"
                app:ms_arrowColor="@color/base"
                app:ms_arrowSize="8dp"
                app:ms_baseColor="@color/base"
                app:ms_dropDownHintView="@layout/dropdown_hint_item"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="@color/error"
                app:ms_floatingLabelColor="@color/floating_label"
                app:ms_floatingLabelText="floating label"
                app:ms_highlightColor="@color/highlight"
                app:ms_hint="To.."
                app:ms_hintColor="@color/hint"
                app:ms_hintView="@layout/hint_item"
                app:ms_multiline="false"
                app:ms_thickness="2dp" />

        </RelativeLayout>

    </TableRow>

    <TableRow
        android:id="@+id/row_date_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        android:layout_marginTop="30dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_travel_date_one"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                app:ms_alignLabels="true"
                app:ms_arrowColor="@color/base"
                app:ms_arrowSize="8dp"
                app:ms_baseColor="@color/base"
                app:ms_dropDownHintView="@layout/dropdown_hint_item"
                app:ms_enableErrorLabel="false"
                app:ms_enableFloatingLabel="false"
                app:ms_errorColor="@color/error"
                app:ms_floatingLabelColor="@color/floating_label"
                app:ms_floatingLabelText="floating label"
                app:ms_highlightColor="@color/highlight"
                app:ms_hint="Select Travel Date"
                app:ms_hintColor="@color/hint"
                app:ms_hintView="@layout/hint_item"
                app:ms_multiline="false"
                app:ms_thickness="2dp" />

        </LinearLayout>


    </TableRow>


    <TableRow
        android:id="@+id/row_how_many"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No Of passengers" />

            <NumberPicker
                android:id="@+id/num_of_passengers"
                android:layout_width="179dp"
                android:layout_height="130dp" />
        </LinearLayout>


    </TableRow>

    <LinearLayout>

        <Button
            android:id="@+id/searchbtn1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn"
            android:text="@string/search"
            android:textSize="18sp" />


    </LinearLayout>
</TableLayout>